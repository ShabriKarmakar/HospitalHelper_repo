@model HospitalHelperMVC.Models.PatientTable
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Patient", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.PatientID)

    <div class="form-group">
        @Html.LabelFor(model => model.Patient_name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Patient_name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Patient_name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Age, new { @class = "control-label" })
        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Age)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Symptoms, new { @class = "control-label" })
        @Html.EditorFor(model => model.Symptoms, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Department, new { @class = "control-label" })
        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Emergency_contact, new { @class = "control-label" })
        @Html.EditorFor(model => model.Emergency_contact, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Emergency_contact)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BedID, new { @class = "control-label" })
        @Html.EditorFor(model => model.BedID, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.Due_pay, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">₹</span>
            @Html.EditorFor(model => model.Due_pay, new { htmlAttributes = new { @class = "form-control" } })
        </div>





    </div>

    //Submit and Reset button-----------------------------------

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />

    </div>



}


