@model  HospitalHelperMVC.Models.AdminLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Login</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">

    <style>
        #login-div {
            position: absolute;
            left: 33%;
            top: 20%;
            
            
        }

        .field-validation-error {
            color: red;
        }
    </style>

    <link href="~/AdminStyle/css/fontawesome-all.css" rel="stylesheet" />

    <link href="~/AdminStyle/css/style.css" rel="stylesheet" />

    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

</head>
<body>
    
    <div id="login-div" class=" w3l-login-form">
        @using (Html.BeginForm("AdminAuthourize", "AdminLogin", FormMethod.Post))
        {

            <div class=" w3l-form-group">
                <h2> Admin Login </h2>
                <label>Username:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                   

                    <input type="text" id="UserName" name="UserName" placeholder="Enter User Name" required="" />

                </div>
                @Html.ValidationMessageFor(model => model.UserName)

            </div>
            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                   
                    <input type="Password" name="Password" placeholder="Enter Password" required="" id="Password" />

                </div>
                @Html.ValidationMessageFor(model => model.Password)

            </div>
            <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>

          

            <button style="margin:5px;" type="submit" name="name" value="Login">Login</button>

            <button style="margin:5px;" type="reset" name="name" value="Clear">Reset</button>



            
        }
    </div>




    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
