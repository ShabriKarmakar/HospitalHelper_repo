@model HospitalHelperMVC.Models.BedTable
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Bed", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.BedID, new { @class = "control-label" })
        @Html.EditorFor(model => model.BedID, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.BedID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ward_No, new { @class = "control-label" })
        @Html.EditorFor(model => model.Ward_No, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ward_type, new { @class = "control-label" })
        @Html.EditorFor(model => model.Ward_type, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    




    //Submit and Reset button-----------------------------------

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />

    </div>



}